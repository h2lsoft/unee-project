{% extends '/core/theme/core-admin/base.twig' %}

{% block title %}Lost password{% endblock title %}
{% block body_class %}auth auth-password{% endblock %}
{% block header %}{% endblock header %}
{% block menu %}{% endblock menu %}
{% block breadcrumbs %}{% endblock breadcrumbs %}


{% block content %}

<div id="login-form" class="container-fluid login-form-wrapper">

    <div class="d-flex justify-content-center">

        <div class="col-11 col-sm-10 col-md-8 col-lg-5 col-xl-3  shadow-lg p-5 box-form">

            <div class="text-center">
                <h3 class="text-primary mb-4"><i18n>Lost password</i18n></h3>
            </div>

            <form method="post" action="" class="form-ajax"
                  data-force-error-message="<i18n>email not found or user not active</i18n>"
                  data-onvalidate-message="<i18n>Your credentials has been correctly sent, please follow instructions inside</i18n>"
            >

                <div class="form-error mb-3 text-center text-danger"></div>

                <div class="row">
                    <div class="col mb-3">
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email" autofocus onfocus="this.select()">
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        <button class="btn w-100 btn-primary text-center my-3 btn-submit" type="submit">
                            <i class="spinner spinner-border spinner-border-sm text-white"></i> <i18n>Send</i18n>
                        </button>
                    </div>

                </div>

            </form>
        </div>
    </div>

</div>



{% endblock content %}