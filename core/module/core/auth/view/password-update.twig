{% extends '/core/theme/core-admin/base.twig' %}

{% block title %}Password update{% endblock title %}
{% block body_class %}auth auth-password{% endblock %}

{% block header %}{% endblock header %}
{% block menu %}{% endblock menu %}
{% block breadcrumbs %}{% endblock breadcrumbs %}


{% block content %}

<div id="login-form" class="container-fluid login-form-wrapper">

    <div class="d-flex justify-content-center">

        <div class="col-11 col-sm-10 col-md-8 col-lg-5 col-xl-3  shadow-lg p-5 box-form">

            <div class="text-center">
                <h3 class="text-primary mb-4"><i18n>Password update</i18n></h3>
            </div>

            <form method="post" action="" class="form-ajax">

                <div class="form-error mb-3 text-center text-danger"></div>

                <div class="row">
                    <div class="col mb-3">
                        <input type="password" name="password" id="password" class="form-control" placeholder="<i18n>Password</i18n> *" autofocus>
                    </div>
                </div>
                <div class="row">
                    <div class="col mb-3">
                        <input type="password" name="password2" id="password2" class="form-control" placeholder="<i18n>Password confirmation</i18n> *">
                    </div>
                </div>

                <div class="row">
                    <div class="col mb-3">
                        <button class="btn w-100 btn-primary text-center my-3 btn-submit" type="submit">
                            <i class="spinner spinner-border spinner-border-sm text-white"></i> <i18n>Update</i18n>
                        </button>
                    </div>

                </div>

            </form>

            <div class="form-ajax-success">
                <i18n>Your password has been correctly updated</i18n><br>
                <a href="{{ path(login_route) }}"><i18n>You can signin</i18n></a>
            </div>


        </div>
    </div>

</div>



{% endblock content %}